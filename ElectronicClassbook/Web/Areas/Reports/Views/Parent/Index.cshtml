@model Web.Areas.Reports.Models.ParentReportViewModel

@{
    ViewData["Title"] = "Rychlý přehled";
    Layout = "_Layout";
}

<h3>Rychlý přehled</h3>
<br />

@foreach (var kid in Model.Students)
{

<div class="row">

    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="p-4 border-bottom bg-light">
                <h5>@kid.FirstName @kid.LastName</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <h6>Absence (@kid.Absences.Count)</h6>
                        @if (kid.Absences.Count > 0)
                        {
                        <ul>
                            @foreach (var a in kid.Absences)
                            {
                                <li>@a.Record.Created.ToString("dd/MM/yyyy") @a.Record.Subject.Code</li>
                            }
                        </ul>
                        }
                        else
                        {
                            <div>Žádné nové absence.</div>
                        }
                    </div>

                    <div class="col-md-4">
                        <h6>Domácí úkoly (@kid.Homeworks.Count)</h6>
                        @if (kid.Homeworks.Count > 0)
                        {
                        <ul>
                            @foreach (var hw in kid.Homeworks)
                            {
                                <li>@hw.Deadline.ToString("dd/MM/yyyy") @hw.Title</li>
                            }
                        </ul>
                        }
                        else
                        {
                            <div>Žádné domácí úkoly.</div>
                        }
                    </div>

                    <div class="col-md-4">
                        <h6>Poznámky (@kid.Notes.Count)</h6>
                        @if (kid.Notes.Count > 0)
                        {
                        <ul>
                            @foreach (var note in kid.Notes)
                            {
                                <li>@note.Created.ToString("dd/MM/yyyy") @note.Note</li>
                            }
                        </ul>
                        }
                        else
                        {
                            <div>Žádné nové poznámky.</div>
                        }
                    </div>

                </div>
            </div>
        </div>
        </div>

