@model PaginatedList<Web.Areas.Admin.Models.SubjectViewModel>
@{
    ViewData["Title"] = "Předměty";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="p-4 border-bottom bg-light">
                <h5 class="d-inline">Předměty</h5>

                @* Tlačítko na přidání předmětu *@
                <div class="float-right d-inline">
                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Subject" asp-action="AddSubject">Přidat předmět</a>
                </div>
            </div>

            <div class="card-body">
                @if (Model.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col"> Zkratka</th>
                                    <th scope="col"> Název</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            <div class="container">
                                                <div class="btn-group blocks" role="button">
                                                    <a class="btn btn-primary" asp-area="Admin" asp-controller="Subject" asp-action="DetailSubject" asp-route-id="@item.Id">Detail</a>
                                                    <a class="btn btn-success" asp-area="Admin" asp-controller="Subject" asp-action="EditSubject" asp-route-id="@item.Id">Edit</a>
                                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Subject" asp-action="DeleteSubject" asp-route-id="@item.Id">Smazat</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                    var nextDisabled = !Model.HasNextPage ? "disabled" : "";

                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex - 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="btn btn-default @prevDisabled">
                        Předchozí
                    </a>
                    <a asp-action="Index"
                       asp-route-sortOrder="@ViewData["CurrentSort"]"
                       asp-route-pageNumber="@(Model.PageIndex + 1)"
                       asp-route-currentFilter="@ViewData["CurrentFilter"]"
                       class="btn btn-default @nextDisabled">
                        Další
                    </a>
                }
                else
                {
                    <div>Žádné předměty k zobrazení.</div>
                }
            </div>
        </div>
    </div>
</div>





