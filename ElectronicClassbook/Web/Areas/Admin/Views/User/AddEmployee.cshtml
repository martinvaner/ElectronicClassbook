                    <div>
                        <div class="form-group d-inline float-right">
                            <input type="submit" value="Vytvořit zaměstnance" class="btn btn-primary" />
                        </div>
                        <div class="d-inline">
                            <a asp-action="EmployeeList">Zpět</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>