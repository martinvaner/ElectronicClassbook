@model Web.Areas.Admin.Models.EmployeeDetailViewModel

@{
    ViewData["Title"] = "Detail zaměstnance";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="p-4 border-bottom bg-light">
                <h5>Detail zaměstnance</h5>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="form-group col-md">
                        <label asp-for="FirstName" class="control-label"></label>
                        <label class="form-control">@Model.FirstName</label>
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="LastName" class="control-label"></label>
                        <label class="form-control">@Model.LastName</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md">
                        <label asp-for="TitleBefore" class="control-label"></label>
                        <label class="form-control">@Model.TitleBefore</label>
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="TitleAfter" class="control-label"></label>
                        <label class="form-control">@Model.TitleAfter</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md">
                        <label asp-for="Email" class="control-label"></label>
                        <label class="form-control">@Model.Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-lg">
                        <label asp-for="Address" class="control-label"></label>
                        <label class="form-control">@Model.Address</label>
                    </div>
                </div>
                <div class=" row">
                    <div class="form-group col-md">
                        <label asp-for="PersonalIdentificationNumber" class="control-label"></label>
                        <label class="form-control">@Model.PersonalIdentificationNumber</label>
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="Gender" class="control-label"></label>
                        @if (Model.Gender != null)
                        {
                            @if (Model.Gender.Value)
                            {
                                <label class="form-control">Muž</label>
                            }
                            else
                            {
                                <label class="form-control">Žena</label>
                            }
                        }

                    </div>

                </div>
                <div class="row">
                    <div class="form-group col-sm">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <input type="date" disabled class="form-control" value="@Model.DateOfBirth.Value.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group col-sm">
                        <label asp-for="BirthLocation" class="control-label"></label>
                        <label class="form-control">@Model.BirthLocation</label>
                    </div>
                    <div class="form-group col-sm">
                        <label asp-for="Citizenship" class="control-label"></label>
                        <label class="form-control">@Model.Citizenship</label>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm">
                        @Html.LabelFor(model => model.Roles, new { @class = "control-label" })
                        <div class="col-sm-6">
                            <ul>
                                @foreach (var r in Model.Roles)
                                {
                                    <li>@r.Name</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-6">
                        <h6>Učitel</h6>
                        <div>
                            <div class="form-group">
                                <label asp-for="HireDate" class="control-label"></label>
                                <input type="date" disabled class="form-control" value="@Model.HireDate.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Subjects, new { @class = "col-sm-6 col-form-label" })
                                <div class="col-sm-6">
                                    <ul>
                                        @foreach (var s in Model.Subjects)
                                        {
                                            <li>@s.Name</li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h6>Třídní učitel</h6>
                        <div>
                            <div class="form-group row">
                                @Html.LabelFor(model => model.TeacherClass, new { @class = "control-label" })
                                <div class="col-sm-6">
                                    <p>@Model.TeacherClass?.Name</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



