@model PaginatedList<Web.Areas.Classbook.Models.StudentListViewModel>

@{
    ViewData["Title"] = "Seznam žáků";
    Layout = "_ClassbookLayout";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="p-4 border-bottom bg-light">
                <h5>Seznam žáků</h5>
            </div>

            <div class="card-body">
                @if (Model.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Jméno
                                    </th>
                                    <th>
                                        Příjmení
                                    </th>
                                    <th>
                                        E-mail
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    @Html.HiddenFor(modelItem => item.Id)
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            <div class="container">
                                                <div class="btn-group blocks" role="button">
                                                    <a class="btn btn-primary" asp-area="Classbook" asp-controller="Student" asp-action="CreateSchoolHomeNote" asp-route-classbookId="@ViewBag.ClassbookId" asp-route-studentId="@item.Id">Napsat poznámku</a>
                                                    <a class="btn btn-primary" asp-area="Classbook" asp-controller="Student" asp-action="ListSchoolHomeNote" asp-route-classbookId="@ViewBag.ClassbookId" asp-route-studentId="@item.Id">Seznam poznámek</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div>Žádní žáci k zobrazení.</div>
                }
            </div>
        </div>
    </div>
</div>